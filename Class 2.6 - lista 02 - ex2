//Faça um programa que leia N números e informe o maior número.
#include<iostream>
using namespace std;

int leitura(int a, int b){
	if (a > b){
		return a;
	} else {
		return b;
	}
	
}

int main(){
	int n;
	int maiorDT = 0;
	for(int i = 0; i < 3; i++){
		cout << "insira um valor: "; cin >> n;
		maiorDT = leitura(maiorDT, n);
	} 
	
	cout << "Maior de todos: " << maiorDT;
	
	return 0;
}
