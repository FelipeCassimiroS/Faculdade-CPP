/* Um vendedor necessita de um algoritmo que calcule o preço total devido por um cliente.
 O algoritmo deve receber o código de um produto e a quantidade comprada e calcular o	preço total, usando a tabela abaixo:
 
 Código Produto           Preço unitário
 1001                      5,32  
 1324                      6,45
 6548					   2,37
 6987					   5,32
 7623					   6,45
 */
 
 #include<iostream>
 #include<math.h>
 using namespace std;
 
 void calculaT(){
 	int opcao = 0;
 	float custo, quantidade;
 	cout << "Código Produto---------Preço unitário" << endl;
 	cout << "   1001          |        5,32" << endl;
 	cout << "   1324          |        6,45" << endl;
 	cout << "   6548          |        2,37" << endl;
 	cout << "   6987          |        5,32" << endl;
 	cout << "   7623          |        6,45" << endl;
 	cout << "-------------------------------------\n" << endl;	
 	cout << "Digite o codigo do produto comprado: ";
 	cin >> opcao;
 	switch (opcao){
 		case 1001:
	 		 cout << "\n-------------------------------------" << endl;
	 		 cout << "Valor do produto: R$5.32\n" << endl;
			 cout << "Quantidade comprada: ";
			 cin >> quantidade;	  	  
		 	 custo = 5.32 * quantidade;
			 cout << "\nR$" << custo << " a pagar!" << endl;	      
 	     	 break;
		 	    
		
		case 1324:
			 cout << "\n-------------------------------------" << endl;	
			 cout << "Valor do produto: R$6.45\n" << endl;
			 cout << "Quantidade comprada: ";
			 cin >> quantidade;	  	  
		 	 custo = 6.45 * quantidade;
			 cout << "\nR$" << custo << " a pagar!" << endl;
			 break;
		
			  
        case 6548:
        	 cout << "\n-------------------------------------" << endl;
			 cout << "Valor do produto: R$2.37\n" << endl;
	 		 cout << "Quantidade comprada: ";
			 cin >> quantidade;	  	  
		 	 custo = 2.37 * quantidade;
			 cout << "\nR$" << custo << " a pagar!" << endl;
		  	 break;
		
		
		case 6987:
			 cout << "\n-------------------------------------" << endl;	
			 cout << "Valor do produto: R$5.32\n" << endl;
			 cout << "Quantidade comprada: ";
			 cin >> quantidade;	  	  
		 	 custo = 5.32 * quantidade;
			 cout << "\nR$" << custo << " a pagar!" << endl;
			 break;
		
		case 7623:
			 cout << "\n-------------------------------------" << endl;	
			 cout << "Valor do produto: R$6.45\n" << endl;
			 cout << "Quantidade comprada: ";
			 cin >> quantidade;	  	  
		 	 custo = 6.45 * quantidade;
			 cout << "\nR$" << custo << " a pagar!" << endl;
			 break;
		
		case 0:
			 cout << "\n-------------------------------------" << endl;	
			 cout << "Saindo..." << endl;
			 
			 break;	
			 
		default:
			cout << "Codigo invalido!" << endl;
			
			break;	 	  	  	 			  	    
	 }
 }
 
 int main(){
 	cout << "*************************************" << endl;
 	cout << "\n            TOTAL A PAGAR   \n" << endl;
 	cout << "*************************************\n" << endl;
 	calculaT();
 	
 	return 0;
 }
