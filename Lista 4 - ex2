//Ler um vetor Q de 20 posições (aceitar somente números positivos). Escrever a seguir o valor do maior elemento de Q e a respectiva posição que ele ocupa no vetor.

#include<iostream>
using namespace std;

int main(){
	int a, maior, posic;
	int *vetorQ = new int[a];
	
	for(int i = 0; i < 20; i++){	
		do{
		cout << "Insira um valor positivo: "; cin >> a;
		
		if ( a <= 0){
			cout << "ERRRRRRRROR" << endl;
		}
		
		if ( a > maior){
			maior = a;
			posic = i + 1;
			}
			
		} while( a < 0);		
	}
	
	cout << "maior de todos: " << maior << endl;
	cout << "posicao: " << posic << endl;
			
	return 0;
}
