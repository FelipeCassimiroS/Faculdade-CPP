/*Desenvolva uma função que some dois números do tipo inteiro.
Esta função deverá ter o nome idêntico ao que você fez na questão 3. 
Tente chamar esta nova função dentro da	MAIN() e veja o que acontece.*/

#include <iostream>
#include <math.h>

using namespace std;

int calculo(int x1, int x2){
	int soma = x1 + x2;
	return soma;
}

float calculo(float x1, float x2){
	float soma = x1 + x2;
	return soma;
}

int main(){
	float x1, x2;
	cout << "Primeiro número: " << endl;
	cin >> x1;
	cout << "Segundo número: ";
	cin >> x2;
	cout << "O resultado dos dois números somados é: " << calculo(x1, x2);
	return 0;
}
