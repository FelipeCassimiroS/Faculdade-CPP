//Faça um algoritmo que leia um numero inteiro e mostre uma mensagem indicando se este número é par ou ímpar, e se é positivo ou negativo.

#include <iostream>
#include <math.h>
using namespace std;

void verificacao(int x){
	if(x == 0){
		cout << "nulo";
	}
	else if (x % 2 == 0 and x > 0){
		cout << "Este numero eh par e postivo";
	}else if(x % 2 == 0 and x < 0){
		cout << "Este numero eh par e negativo";
	}else if(x > 0){
		cout << "Este numero eh impar e positivo";
	}else{
		cout << "Este numero eh impar e negativo";
	}
		
	}

int main(){
	int x = 0;
	cout << "Imprima um valor desejado: ";
	cin >> x;
	verificacao(x);	
	
	return 0;
}
